
<%- include("partials/header"); -%>
    <h3>Home</h3>
    <p> <%= startingContent %> </p>

    <%  posts.forEach(function(post){ %>

      <h3><%=post.title%></h3>
      <p>
      <%=post.content.substring(0, 100) + " ..."%>
      <a href="/posts/<%=post._id%>">Read More</a>
      </p>
  
    <% }) %>
    
    <form class="" action="/compose" method="get">
      <div class="compose-btn">
        <button class="btn btn-primary" type="submit" name="button">Compose</button>
      </div>
    </form>

<%- include("partials/footer"); -%>
